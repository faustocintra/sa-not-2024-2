<%- include('../_partial/header') %>

<h1><%= title %></h1>

<style>
  .message {
    padding: 10px;
    margin: 10px 0;
  }
  .success  {
    border: 1px solid green;
    background: lightgreen;
  }
  .error {
    border: 1px solid red;
    background: pink;
  }
  label span {
    display: block;
  }
  label span.inline {
    display: inline;
  }
</style>

<% if(message) { %>
  <div class="message <%= error ? 'error' : 'success' %>">
    <%= message %>
  </div>
<% } %>

<% console.log({user}) %>

<form method="POST" action="/users">
  
  <input type="hidden" name="id" value="<%= user?.id %>">

  <div>
    <label>
      <span>Nome completo</span>
      <input name="fullname" value="<%= user?.fullname %>">
    </label>
  </div>

  <div>
    <label>
      <span>Nome de usuário</span>
      <input name="username" value="<%= user?.username %>">
    </label>
  </div>

  <div>
    <label>
      <span>E-mail</span>
      <input name="email" value="<%= user?.email %>">
    </label>
  </div>

  <div>
    <label>
      <span>Confirme o e-mail</span>
      <input name="confirm_email" value="<%= user?.email %>">
    </label>
  </div>

  <div>
    <label>
      <input type="checkbox" name="is_admin" <%= user?.is_admin ? 'checked' : '' %>>
      <span class="inline">É admin?</span>
    </label>
  </div>

  <div id="change-password" 
    style="visibility: <%= user?.id ? 'visible' : 'hidden' %>">
    <label>
      <input type="checkbox" name="change_password">
      <span class="inline">Alterar senha?</span>
    </label>
  </div>

  <div id="password-fields"
     style="visibility: <%= user?.id ? 'hidden' : 'visible' %>">
    <div>
      <label>
        <span>Senha</span>
        <input type="password" name="password">
      </label>
    </div>

    <div>
      <label>
        <span>Confirme a senha</span>
        <input type="password" name="confirm_password">
      </label>
    </div>
  </div>

  <div>
    <button type="submit">Enviar</button>
  </div>

  <script>
    const form = document.querySelector('form')
    form.addEventListener('submit', event => {

      const email = document.querySelector('input[name="email"]')
      const confirm_email = document.querySelector('input[name="confirm_email"]')

      if(email.value !== confirm_email.value) {
        event.preventDefault()
        alert('A confirmação do email não coincide com o email.')
        confirm_email.focus()
        return false
      }

      const password = document.querySelector('input[name="password"]')
      const confirm_password = document.querySelector('input[name="confirm_password"]')

      if(password.value !== confirm_password.value) {
        event.preventDefault()
        alert('A confirmação da senha não coincide com a senha.')
        confirm_password.focus()
        return false
      }

    })

    const change_password = document.querySelector('input[name="change_password"]')
    const password_fields = document.querySelector('#password-fields')

    change_password.addEventListener('change', event => {
      const status = event.target.checked ? 'visible' : 'hidden'
      password_fields.style.visibility = status
    })

  </script>

</form>
<%- include('../_partial/footer') %>