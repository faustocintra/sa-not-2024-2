<%- include('../_partial/header') %>

<h1>Listagem de usuários</h1>

<style>
  .message {
    padding: 10px;
    margin: 10px 0;
  }
  .success {
    border: 1px solid green;
    background: lightgreen;
  }
  .error {
    border: 1px solid red;
    background: pink;
  }
  label span {
    display: block;
  }
  label span.inline {
    display: inline;
  }
</style>

<% if(message) { %>
<div class="message <% error ? 'error' : 'success' %>">
  <%= message %>
</div>
<% } %>

<form>

  <div>
    <label>
      <span>Nome completo</span>
      <input name="fullname" value="<%= user?.fullname %>">
    </label>
  </div>

  <div>
    <label>
      <span>Nome cde usuário</span>
      <input name="username" value="<%= user?.username %>">
    </label>
  </div>

  <div>
    <label>
      <span>E-mail</span>
      <input name="email" value="<%= user?.email %>">
    </label>
  </div>

  <div>
    <label>
      <span>Confirme o e-mail</span>
      <input name="confirm_email" value="<%= user?.confirm_email %>">
    </label>
  </div>

  <div>
    <label>
      <input type="checkbox" name="is_admin" value="<%= user?.admin ? 'checked' : '' %>">
      <span class="inline">É admin?</span>
    </label>
  </div>

  <div>
    <label>
      <span>Senha</span>
      <input type="password" name="password">
    </label>
  </div>

  <div>
    <label>
      <span>Confirme a senha</span>
      <input type="password" name="confirm_password">
    </label>
  </div>

  <div>
    <button type="submit">Enviar</button>
  </div>

</form>

<%- include('../_partial/footer') %>